# API Configuration
PORT=8000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_ID=gpt-4o
OPENAI_BASE_URL=https://api.openai.com/v1  # Optional: For OpenAI compatible APIs

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL_ID=claude-3-opus-20240229

# MistralAI Configuration
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL_ID=mistral-large-latest

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL_ID=gemini-1.5-pro

# Ollama Configuration
OLLAMA_API_BASE=http://localhost:11434  # For local Ollama instance
OLLAMA_MODEL_ID=llama3

# Azure OpenAI Configuration
AZURE_API_KEY=your_azure_api_key_here
AZURE_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_DEPLOYMENT_NAME=your_deployment_name
AZURE_API_VERSION=2023-05-15

# Browser Configuration
BROWSER_USE_HEADFUL=true  # Set to true to show browser UI, false to run in headless mode
CHROME_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome  # macOS path
# Windows path: C:\Program Files\Google\Chrome\Application\chrome.exe
# Linux path: /usr/bin/google-chrome
CHROME_USER_DATA=~/Library/Application Support/Google/Chrome  # macOS path
# Windows path: C:\Users\<username>\AppData\Local\Google\Chrome\User Data
# Linux path: ~/.config/google-chrome

# Optional Configuration
# LOG_LEVEL=INFO 